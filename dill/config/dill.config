# ------------------------------
# Core Settings
# ------------------------------

# Version of Dill
VERSION="0.0.1"

# Debug flag for scripts
DEBUG=true

# Keep cache after AUR updates
KEEP_CACHE=True #Default

# Cache directory for AUR operations
CACHE_DIR="$HOME/.cache/dill" #Default

# ------------------------------
# pacman Behaviour
# ------------------------------
#Get Pacman Options and then override if needed

# Add standard pacman fun option
ILoveCandy=True

# ------------------------------
# UI / Display
# ------------------------------

# Header colour for Dill logo
# Options:
# black red green yellow blue magenta cyan white
HEADER_COLOR="green" #Default

# Language setting
